# Server Configuration (Uvicorn will be run on port 8000 by default in Docker)
# PORT=8000 # Not strictly needed if uvicorn default is used

# MongoDB Configuration
MONGO_URI=mongodb://mongo:27017/pythondb
MONGO_DB_NAME=pythondb # Explicitly define DB name for Motor

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD= # if you have one

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# API Info for Swagger/OpenAPI
API_TITLE="Python FastAPI Product API"
API_VERSION="1.0.0"
API_DESCRIPTION="A simple CRUD API for products using FastAPI, MongoDB, Redis, and RabbitMQ."
CONTACT_NAME="API Support"
CONTACT_EMAIL="py.support@example.com"
